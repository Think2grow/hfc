const sessionStructure = [
  {
    phase: 'Discovery & Assessment',
    duration: '15-20 minutes',
    activities: ['Review your current financial situation', 'Clarify your goals and priorities', 'Identify obstacles and opportunities'],
  },
  {
    phase: 'Strategy & Planning',
    duration: '25-30 minutes',
    activities: ['Develop actionable strategies', 'Create step-by-step plan', 'Explore tools and systems', 'Address specific questions'],
  },
