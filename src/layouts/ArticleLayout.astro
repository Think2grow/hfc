---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---
<BaseLayout title={frontmatter.title} description={frontmatter.description}>
  <div class="bg-gradient-to-br from-[#f5f8ff] via-[#eaf0fa] to-[#f7fafc] min-h-[80vh] py-16 px-2 flex items-center justify-center">
    <article class="prose max-w-3xl w-full bg-white/95 rounded-3xl shadow-2xl border-t-8 border-primary px-4 md:px-10 py-8 relative overflow-hidden prose-headings:font-bold prose-headings:text-primary prose-h1:text-2xl md:prose-h1:text-3xl prose-h2:text-xl md:prose-h2:text-2xl prose-h3:text-lg md:prose-h3:text-xl prose-p:text-base prose-p:leading-relaxed prose-li:my-1 prose-li:marker:text-primary prose-ul:pl-5 prose-ol:pl-5 prose-hr:my-8">
      <div class="absolute -top-8 -right-8 opacity-10 pointer-events-none select-none" aria-hidden="true">
        <svg width="120" height="120" viewBox="0 0 120 120" fill="none"><circle cx="60" cy="60" r="60" fill="#4d648e" /></svg>
      </div>
      <h1 class="!mb-2 !font-extrabold !text-2xl md:!text-3xl !text-primary drop-shadow-sm tracking-tight">{frontmatter.title}</h1>
      {frontmatter.date && <div class="text-xs font-semibold text-primary/70 mb-6 uppercase tracking-wider">{frontmatter.date}</div>}
      <hr class="my-6 border-t border-gray-200" />
      <slot />
    </article>
  </div>
</BaseLayout>
