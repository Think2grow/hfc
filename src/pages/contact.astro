---
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionHeading from '../components/SectionHeading.astro';
---
<BaseLayout title="Contact | Highline Financial Coaching" description="Contact Highline Financial Coaching. Send a message, ask a question, or book your free discovery call.">
  <section class="bg-white py-16 px-4 text-center">
    <SectionHeading title="Contact" subtitle="Let’s connect. I’m here to help." />
    <div class="max-w-xl mx-auto mt-10">
      <form name="contact" method="POST" data-netlify="true" class="flex flex-col gap-4 text-left bg-light rounded shadow p-8">
        <input type="hidden" name="form-name" value="contact" />
        <label class="font-medium text-dark">Name
          <input type="text" name="name" required class="mt-1 w-full px-4 py-2 rounded border border-gray-300 focus:outline-primary" />
        </label>
        <label class="font-medium text-dark">Email
          <input type="email" name="email" required class="mt-1 w-full px-4 py-2 rounded border border-gray-300 focus:outline-primary" />
        </label>
        <label class="font-medium text-dark">Phone (optional)
          <input type="tel" name="phone" class="mt-1 w-full px-4 py-2 rounded border border-gray-300 focus:outline-primary" />
        </label>
        <label class="font-medium text-dark">Message
          <textarea name="message" required rows="4" class="mt-1 w-full px-4 py-2 rounded border border-gray-300 focus:outline-primary"></textarea>
        </label>
        <button type="submit" class="mt-4 px-5 py-2 rounded bg-primary text-white font-semibold hover:bg-primary/90 transition">Send Message</button>
      </form>
      <div class="mt-8 text-gray-700 text-center">
        <div>Email: <a href="mailto:matt@highlinefinancialcoaching.com" class="text-primary hover:underline">matt@highlinefinancialcoaching.com</a></div>
        <div>Phone: <a href="tel:+13854062879" class="text-primary hover:underline">385-406-2879</a></div>
      </div>
      <div class="mt-8">
        <a href="https://go.highlinefinancialcoaching.com/widget/booking/IzVvZ4MhTaD8eZiRlBrk" target="_blank" rel="noopener" class="inline-block px-6 py-3 rounded bg-primary text-white font-bold shadow hover:bg-primary/90 transition">Book a Free Discovery Call</a>
      </div>
    </div>
  </section>
</BaseLayout>
