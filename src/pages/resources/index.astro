---
import BaseLayout from '../../layouts/BaseLayout.astro';
const posts = await Astro.glob('./*.md');
---
<BaseLayout title="Resources | Highline Financial Coaching" description="Free financial education, tips, and tools from Highline Financial Coaching. Browse articles and guides to help you on your journey.">
  <section class="bg-white py-16 px-4 text-center">
    <h1 class="text-4xl md:text-5xl font-bold mb-4 text-dark">Resources & Articles</h1>
    <p class="text-lg md:text-xl text-gray-700 mb-8 max-w-2xl mx-auto">Practical guides, tips, and tools to help you build confidence and clarity with your money.</p>
    <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto mt-10">
      {posts.map(post => (
        <a href={post.url} class="block bg-light rounded shadow p-6 text-left hover:bg-accent/10 transition">
          <div class="text-xl font-bold text-primary mb-2">{post.frontmatter.title}</div>
          <div class="text-gray-700 mb-2">{post.frontmatter.description}</div>
          <div class="text-xs text-gray-500">{post.frontmatter.date}</div>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
