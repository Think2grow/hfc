---
export interface Props {
  title: string;
  subtitle?: string;
  align?: 'left' | 'center' | 'right';
}
const { title, subtitle, align = 'center' } = Astro.props;
---
<div class={`mb-8 ${align === 'center' ? 'text-center' : align === 'right' ? 'text-right' : 'text-left'}`}>
  <h2 class="text-3xl md:text-4xl font-bold text-dark mb-2">{title}</h2>
  {subtitle && <p class="text-lg text-gray-600 max-w-2xl mx-auto">{subtitle}</p>}
</div>
